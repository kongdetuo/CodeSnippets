<?xml version="1.0" encoding="utf-8" ?>
<CodeSnippets  xmlns="http://schemas.microsoft.com/VisualStudio/2005/CodeSnippet">
    <CodeSnippet Format="1.0.0">
        <Header>
            <Title>Define a Readonly Properties</Title>
            <Shortcut>avarp</Shortcut>
            <Description>Code snippet for a property using Readonly Properties as the backing store</Description>
            <Author>tt</Author>
            <SnippetTypes>
                <SnippetType>Expansion</SnippetType>
            </SnippetTypes>
        </Header>
        <Snippet>
            <Declarations>
                <Literal>
                    <ID>ownerType</ID>
                    <ToolTip>Owner Type</ToolTip>
					<Function>ClassName()</Function>
                    <Default>Border</Default>
                </Literal>
				<Literal>
					<ID>type</ID>
					<ToolTip>Property Type</ToolTip>
					<Default>object</Default>
				</Literal>
				<Literal>
                    <ID>field</ID>
                    <ToolTip>Field Name</ToolTip>
                    <Default>_field</Default>
                </Literal>
                <Literal>
                    <ID>property</ID>
                    <ToolTip>Property Name</ToolTip>
                    <Default>MyProperty</Default>
                </Literal>
            </Declarations>
            <Code Language="csharp">
                <![CDATA[

public static readonly DirectProperty<$ownerType$, $type$> $property$Property =
    AvaloniaProperty.RegisterDirect<$ownerType$, $type$>(
        nameof($property$),
        o => o.$property$);

private $type$ $field$;

public $type$ $property$
{
    get => $field$;
    private set => SetAndRaise($property$Property, ref $field$, value); 
}

$end$]]>
            </Code>
        </Snippet>
    </CodeSnippet>
</CodeSnippets>
